<table>

  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% @article.each do |item| %>
  <tr>
      <td> <%= item.id%> </td>
      <td><%= item.title%></td>
      <td> <%= item.text%> </td>
      <td> <%= link_to 'Show', article_path(item) %> </td>
      <td> <%= link_to 'Edit', edit_article_path(item) %> </td>
      <td><%= link_to 'Delete', article_path(item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

      <td><%= link_to 'Create a comment', new_article_comment_path(item) %></td>
      <td>

        <%= link_to 'Read comments', article_comments_path(item) %>


      </td>

    <% end %>
  </tr>

</table>

<%= link_to 'Back', root_path %>